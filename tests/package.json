{
  "name": "entrebot-route-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Entrebot API routes",
  "scripts": {
    "test": "jest --config jest.config.routes.js",
    "test:watch": "jest --config jest.config.routes.js --watch",
    "test:coverage": "jest --config jest.config.routes.js --coverage",
    "test:users": "jest --config jest.config.routes.js routes/users.test.js",
    "test:sessions": "jest --config jest.config.routes.js routes/sessions.test.js",
    "test:conversations": "jest --config jest.config.routes.js routes/conversations.test.js",
    "test:memory": "jest --config jest.config.routes.js routes/memory.test.js",
    "test:ci": "jest --config jest.config.routes.js --ci --coverage --maxWorkers=2",
    "test:verbose": "jest --config jest.config.routes.js --verbose"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
